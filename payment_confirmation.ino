  display.drawBitmap(0, 0, image_data, 128, 64, 1);
  display.display();

  delay(2000);

  display.begin(SSD1306_SWITCHCAPVCC, OLED_ADDR);
  display.clearDisplay();

  display.setTextSize(2);
  display.setTextColor(WHITE);
  display.setCursor(0, 0);
  display.println("thank you");
   display.clearDisplay();
 
}
